    <link rel="stylesheet" href="/js/jquery-stars/all.css">

    <script src="https://cdn.bootcss.com/nprogress/0.2.0/nprogress.min.js"></script>
</head>
<body class="custom-background">
<div id="page">
    <div id="left">
        <% include common/left %>
    </div>
    <div id="right">
        <div id="main">
            <%
            var type = request.home.type;
            %>
            <!--index-->
            <% if(type == "article"){ %>
                <%- include post/article %>
            <% }else if(type == "page"){ %>
                <%- include post/page %>
            <% }else if(type == "list"){ %>
                <%- include post/list %>
            <% } %>
        </div>

        <div id="foot">
            <a title="优雅的个人发布平台">由x373241884y设计. 主题：Flat 1.7.6 by Themeisle</a> <span><a style="color:dodgerblue"
                                                                                         href="https://github.com/x373241884y/xxhblog">Github</a></span>
        </div>
        <div class="gotop disabled" id="gotop"><a href=""><i class="glyphicon glyphicon-plane text-shadow" aria-hidden="true"></i></a></div>
    </div>
</div>
<script src="https://cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
<script src="https://cdn.bootcss.com/bootstrap-markdown/2.10.0/js/bootstrap-markdown.min.js"></script>
<script src="/js/prettify.js"></script>
<script src="/js/jquery-stars/jquery-stars.js"></script>
<script src="/js/snowfall.jquery.min.js"></script>
